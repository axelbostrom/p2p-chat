<Window x:Class="ChatApp.ViewModels.ChatViewModel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp.ViewModels"
        mc:Ignorable="d"
        Title="ChatViewModel" Height="450" Width="800">
    <Grid>
        <TextBox Text="{Binding Path=MyText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" Height="364" TextWrapping="Wrap" VerticalAlignment="Center" Width="380">
            <TextBox.InputBindings>
                <KeyBinding Command="{Binding Path=EnterCommand}" Key="Enter"/>
            </TextBox.InputBindings>
        </TextBox>
    </Grid> 
</Window>

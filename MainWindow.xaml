<Window x:Class="ChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatApp" xmlns:viewmodel="clr-namespace:ChatApp.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MainWindowViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TextBox_Name" HorizontalAlignment="Center" Height="27" Margin="0,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="342"/>
        <TextBox x:Name="TextBox_Port" HorizontalAlignment="Center" Height="27" Margin="0,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="342"/>
        <TextBox x:Name="TextBox_Ip" HorizontalAlignment="Center" Height="27" TextWrapping="Wrap" VerticalAlignment="Top" Width="342" Margin="0,217,0,0"/>
        <TextBlock TextWrapping="Wrap" Text="Enter your name:" Margin="229,82,229,335"/>
        <TextBlock TextWrapping="Wrap" Text="Enter your port number:" Margin="229,143,229,274"/>
        <TextBlock TextWrapping="Wrap" Text="Enter your IP-address:" Margin="229,200,229,216"/>
        <Button Content="Start Server" HorizontalAlignment="Left" Height="45" Margin="229,285,0,0" VerticalAlignment="Top" Click="StartServer_Click" Width="161"/>
        <Button Content="Start Client" HorizontalAlignment="Left" Height="45" Margin="410,285,0,0" VerticalAlignment="Top" Click="StartClient_Click" Width="161"/>
    </Grid>
</Window>
